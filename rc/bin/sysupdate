#!/bin/rc -b

#url = gits://git.9front.org/plan9front/plan9front
#branch = front
url = https://github.com/xplshn/9front
branch = master

rfork en
cd /
if(! test -d .git)
	bind -ac /dist/plan9front /
if(! ~ `{git/branch} heads/$branch)
	>[1=2] echo sysupdate: must be on "$branch" to pull
if not
	git/pull -u $url
